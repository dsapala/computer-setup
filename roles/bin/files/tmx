#!/usr/bin/env bash

set -eu -o pipefail

declare name
declare editor=nvim

declare positional_args=()
while [ "$#" -gt 0 ]; do
  case "$1" in
    -n|--name)
      name="$2"
      shift # past argument
      shift # past value
      ;;
    -e|--editor)
      editor="$2"
      shift # past argument
      shift # past value
      ;;
    --*|-*)
      echo "unknown option $1"
      exit 1
      ;;
    *)
      positional_args+=("$1") # save positional arg
      shift # past argument
      ;;
  esac
done

set -- "${positional_args[@]}" # restore positional parameters

declare dir
if [ -d "${1:-}" ]; then
  dir="$1"
else
  dir="$(pwd)"
fi
# strip any trailing slashes
# shellcheck disable=SC2001
dir="$(sed 's:/*$::' <<<"$dir")"
readonly dir

if [ -z "${name:-}" ]; then
  name="$(echo "${dir##*/}" | sed 's/[^A-Za-z1-9_-]/_/g' | tr '[:upper:]' '[:lower:]')"
fi
readonly name

has_session_exit_code=0
set +e; tmux has-session -t="$name" 2> /dev/null || has_session_exit_code="$?"; set -e;

conf_file="$HOME/.tmux/$name"
mkdir -p "$HOME/.tmux"

if [ ! -f "$conf_file" ]; then
  echo "# ex: ts=2 sw=2 et filetype=tmux" >> "$conf_file"
fi

if [ "$has_session_exit_code" -ne "0" ]; then
  cd "$dir"
  tmux new-session -s "$name" -n editor -d
  tmux send-keys -t "$name:1.1" "tmux source-file -q $conf_file" C-m
  tmux send-keys -t "$name:1.1" "tmux display 'using extra source file: $conf_file'" C-m
  tmux send-keys -t "$name:1.1" "clear" C-m
  tmux send-keys -t "$name:1.1" "$editor" C-m
  tmux new-window
  tmux rename-window bash
  tmux send-keys -t "$name" "clear" C-m
  tmux select-window -t "$name:1"
  tmux select-pane -t "$name:1.1"
fi

exec tmux attach -t "$name"

